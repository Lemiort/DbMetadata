                <a asp-controller="OrganizationProperties" asp-action="Edit" asp-route-id="@item.OrganizationPropertyId">Edit</a> |
                <a asp-controller="OrganizationProperties" asp-action="Details" asp-route-id="@item.OrganizationPropertyId">Details</a> |
